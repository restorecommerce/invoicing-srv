{
  "name": "invoicing-srv",
  "version": "1.0.1",
  "main": "lib/service.js",
  "description": "Generic Invoicing Service",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/invoicing-srv.git"
  },
  "dependencies": {
    "@restorecommerce/chassis-srv": "1.6.4",
    "@restorecommerce/kafka-client": "^1.2.10",
    "@restorecommerce/logger": "1.3.2",
    "@restorecommerce/protos": "6.10.1",
    "@restorecommerce/rc-grpc-clients": "5.1.42",
    "@restorecommerce/resource-base-interface": "1.6.4",
    "@restorecommerce/service-config": "1.0.16",
    "lodash-es": "^4.17.21",
    "memorystream": "^0.3.1",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "redis": "4.7.0",
    "stream": "^0.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@restorecommerce/dev": "0.0.13",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/bluebird": "^3.5.42",
    "@types/elasticsearch": "^5.0.43",
    "@types/lodash-es": "^4.14.202",
    "@types/node": "22.9.0",
    "@types/redis": "4.0.10",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "0.24.0",
    "eslint": "9.14.0",
    "husky": "9.1.6",
    "nodemon": "3.1.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "npm run lint && npm run build",
    "lint": "eslint src",
    "build:tsc": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --minify --tree-shaking=true --sourcemap=inline",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 18.2.0"
  },
  "type": "module",
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/invoicing-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/invoicing-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
