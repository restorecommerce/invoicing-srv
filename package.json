{
  "name": "invoicing-srv",
  "version": "1.4.9",
  "main": "lib/start.cjs",
  "description": "Generic Invoicing Service",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/invoicing-srv.git"
  },
  "dependencies": {
    "@restorecommerce/acs-client": "^3.1.6",
    "@restorecommerce/chassis-srv": "^1.7.8",
    "@restorecommerce/grpc-client": "^2.2.13",
    "@restorecommerce/kafka-client": "^1.3.6",
    "@restorecommerce/logger": "^1.3.8",
    "@restorecommerce/rc-grpc-clients": "5.1.63",
    "@restorecommerce/resource-base-interface": "^1.9.8",
    "@restorecommerce/service-config": "^1.1.7",
    "csv-parse": "^6.1.0",
    "redis": "^4.7.0",
    "sprintf-js": "^1.1.3"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.2.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@jest/globals": "^30.2.0",
    "@restorecommerce/dev": "^0.2.0",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/elasticsearch": "^5.0.43",
    "@types/jest": "30.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/sprintf-js": "^1.1.4",
    "async-mutex": "^0.5.0",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "should": "^13.2.3",
    "ts-jest": "^29.4.5",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "npm-run-all lint jest",
    "jest": "NODE_OPTIONS=--experimental-vm-modules cross-env NODE_ENV=test jest --runInBand --silent=false",
    "lint": "eslint src --fix",
    "build:es": "node esbuild.mjs",
    "build:clean": "rimraf lib",
    "build": "npm-run-all build:clean build:es",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 18.2.0"
  },
  "type": "module",
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/invoicing-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/invoicing-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
